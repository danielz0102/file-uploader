<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= folder.name %></title>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <main>
      <h1><%= folder.name %></h1>

      <section>
        <h2>Submit a file</h2>
        <%- include('partials/errorList', { errors: locals.fileErrors }) %>
        <form
          action="/folder/<%= folder.id %>/files"
          method="post"
          enctype="multipart/form-data"
        >
          <input type="file" name="file" required />
          <button type="submit">Upload</button>
        </form>
      </section>

      <section>
        <h2>Create a folder</h2>
        <%- include('partials/errorList', { errors: locals.folderErrors }) %>
        <form action="/folder/<%= folder.id %>/folders" method="post">
          <input type="text" name="name" placeholder="Folder name" required />
          <button type="submit">Create</button>
        </form>
      </section>

      <%- include('partials/fileList', { folders: children }) %>
    </main>
  </body>
</html>
