<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= folder.name %></title>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <main>
      <h1><%= folder.name %></h1>

      <section>
        <h2>Submit a file</h2>
        <%- include('partials/errorList', { errors: locals.fileErrors }) %>
        <form
          action="/folder/<%= folder.id %>/files"
          method="post"
          enctype="multipart/form-data"
        >
          <input type="file" name="file" required />
          <button type="submit">Upload</button>
        </form>
      </section>

      <section>
        <h2>Create a folder</h2>
        <%- include('partials/errorList', { errors: locals.folderErrors }) %>
        <form action="/folder/<%= folder.id %>/folders" method="post">
          <input type="text" name="name" placeholder="Folder name" required />
          <button type="submit">Create</button>
        </form>
      </section>

      <ul>
        <% if (files.length === 0 && children.length === 0) { %>
        <li>No files in this folder.</li>
        <% } %>

        <% for (const file of files) { %>
        <li class="file">
          <a href="/file/<%= file.id %>"><%= file.name %></a>
        </li>
        <% } %>

        <% for (const child of children) { %>
        <li class="folder">
          <a href="/folder/<%= child.id %>"><%= child.name %></a>
        </li>
        <% } %>
      </ul>
    </main>
  </body>
</html>
